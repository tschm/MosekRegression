{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "automerge": true,
  "ignorePaths": [
    "**/.python-version"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "pre-commit": {
    "enabled": true
  },
  "labels": ["renovate"],
  "packageRules": [
    {
      "groupName": "pre-commit hooks",
      "matchManagers": ["pre-commit"],
      "matchDepTypes": ["repository"],
      "groupSlug": "precommit",
      "labels": ["pre-commit", "dependencies"]
    }
  ]
}
